<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <!-- Navigation -->
        <nav style="background: #222; color: #fff; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
            <div class="container" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 0;">
                <div style="display: flex; align-items: center;">
                    <a href="{{ path('app_index') }}" style="font-size: 1.5rem; font-weight: bold; color: #fff; text-decoration: none; line-height: 1;">
                        Steam
                    </a>
                </div>
                <div style="display: flex; gap: 2rem;">
                    <a href="{{ path('app_index') }}" class="btn">Accueil</a>
                    <a href="{{ path('app_shop') }}" class="btn">Boutique</a>
                    <a href="{{ path('app_library') }}" class="btn">Bibliothèque</a>
                    <a href="{{ path('app_cart') }}" class="btn">Panier</a>
                </div>
            </div>
        </nav>
        
        {% block body %}{% endblock %}
    </body>
</html>
