<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Video Game Platform{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üéÆ</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #1a1a1a;
                color: #ffffff;
            }
            
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }
            
            nav {
                background-color: #2d2d2d;
                padding: 1rem 0;
                margin-bottom: 2rem;
            }
            
            nav ul {
                list-style: none;
                display: flex;
                gap: 2rem;
                margin: 0;
                padding: 0;
                justify-content: center;
            }
            
            nav a {
                color: #ffffff;
                text-decoration: none;
                padding: 0.5rem 1rem;
                border-radius: 4px;
                transition: background-color 0.3s;
            }
            
            nav a:hover, nav a.active {
                background-color: #4a4a4a;
            }
            
            .game-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 2rem;
                margin: 2rem 0;
            }
            
            .game-card {
                background-color: #2d2d2d;
                border-radius: 8px;
                padding: 1.5rem;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                transition: transform 0.3s;
            }
            
            .game-card:hover {
                transform: translateY(-4px);
            }
            
            .btn {
                display: inline-block;
                padding: 0.75rem 1.5rem;
                background-color: #007bff;
                color: white;
                text-decoration: none;
                border-radius: 4px;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s;
            }
            
            .btn:hover {
                background-color: #0056b3;
            }
            
            .btn-success {
                background-color: #28a745;
            }
            
            .btn-success:hover {
                background-color: #1e7e34;
            }
            
            .alert {
                padding: 1rem;
                margin: 1rem 0;
                border-radius: 4px;
            }
            
            .alert-success {
                background-color: #d4edda;
                color: #155724;
                border: 1px solid #c3e6cb;
            }
            
            h1, h2, h3 {
                color: #ffffff;
            }
            
            .price {
                font-size: 1.2rem;
                font-weight: bold;
                color: #28a745;
            }
        </style>
    </head>
    <body>
        <nav>
            <div class="container">
                <ul>
                    <li><a href="{{ path('app_index') }}" class="{{ app.request.get('_route') == 'app_index' ? 'active' : '' }}">üè† Accueil</a></li>
                    <li><a href="{{ path('app_shop') }}" class="{{ app.request.get('_route') == 'app_shop' ? 'active' : '' }}">üõí Boutique</a></li>
                    <li><a href="{{ path('app_cart') }}" class="{{ app.request.get('_route') == 'app_cart' ? 'active' : '' }}">üõçÔ∏è Panier</a></li>
                    <li><a href="{{ path('app_library') }}" class="{{ app.request.get('_route') == 'app_library' ? 'active' : '' }}">üìö Biblioth√®que</a></li>
                </ul>
            </div>
        </nav>

        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-error">{{ message }}</div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
