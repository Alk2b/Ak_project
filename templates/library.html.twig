{% extends 'base.html.twig' %}

{% block title %}Bibliothèque - Video Game Platform{% endblock %}

{% block body %}
    <h1>Votre Bibliothèque</h1>
    <p>Tous vos jeux achetés et téléchargés</p>

    <div class="game-grid">
        <div class="game-card">
            <h3>The Witcher 3: Wild Hunt</h3>
            <p>Acheté le 15 janvier 2024</p>
            <div style="margin: 1rem 0;">
                <div style="background-color: #4a4a4a; border-radius: 4px; height: 8px; overflow: hidden;">
                    <div style="background-color: #28a745; height: 100%; width: 100%;"></div>
                </div>
                <small>Téléchargé - Prêt à jouer</small>
            </div>
            <div style="margin-top: 1rem;">
                <button class="btn btn-success">▶Jouer</button>
                <button class="btn" style="margin-left: 0.5rem;">Paramètres</button>
            </div>
        </div>
        
        <div class="game-card">
            <h3>Minecraft</h3>
            <p>Acheté le 10 janvier 2024</p>
            <div style="margin: 1rem 0;">
                <div style="background-color: #4a4a4a; border-radius: 4px; height: 8px; overflow: hidden;">
                    <div style="background-color: #007bff; height: 100%; width: 65%;"></div>
                </div>
                <small>Téléchargement en cours... 65%</small>
            </div>
            <div style="margin-top: 1rem;">
                <button class="btn" disabled>Pause</button>
                <button class="btn" style="margin-left: 0.5rem;">Annuler</button>
            </div>
        </div>
        
        <div class="game-card">
            <h3>Among Us</h3>
            <p>Acheté le 5 janvier 2024</p>
            <div style="margin: 1rem 0;">
                <div style="background-color: #4a4a4a; border-radius: 4px; height: 8px; overflow: hidden;">
                    <div style="background-color: #28a745; height: 100%; width: 100%;"></div>
                </div>
                <small>Téléchargé - Prêt à jouer</small>
            </div>
            <div style="margin-top: 1rem;">
                <button class="btn btn-success">▶Jouer</button>
                <button class="btn" style="margin-left: 0.5rem;">Désinstaller</button>
            </div>
        </div>
    </div>

    <div style="margin-top: 3rem; padding: 2rem; background-color: #2d2d2d; border-radius: 8px; text-align: center;">
        <h3>Statistiques de jeu</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-top: 2rem;">
            <div>
                <div style="font-size: 2rem; color: #28a745;">3</div>
                <div>Jeux possédés</div>
            </div>
            <div>
                <div style="font-size: 2rem; color: #007bff;">47h</div>
                <div>Temps de jeu total</div>
            </div>
            <div>
                <div style="font-size: 2rem; color: #ffc107;">12</div>
                <div>Succès débloqués</div>
            </div>
        </div>
    </div>

    <script>
        function playGame(gameName) {
            alert('Lancement de ' + gameName + '...\n\nFonctionnalité en cours de développement !');
        }
    </script>
{% endblock %}
